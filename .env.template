# 环境变量模板文件
# 复制为 .env 文件并填入实际值

# 飞书机器人Webhook (必填)
FEISHU_WEBHOOK=https://open.feishu.cn/open-apis/bot/v2/hook/your-webhook-id

# 数据存储目录 (可选，默认为 ./data)
DATA_DIR=./data

# 日志目录 (可选，默认为 ./logs)  
LOG_DIR=./logs

# 日志级别 (可选，默认为 INFO)
LOG_LEVEL=INFO

# 代理设置 (可选)
PROXY_ENABLED=false
PROXY_LIST=proxy1.example.com:8080,proxy2.example.com:8080

# 请求设置 (可选)
REQUEST_TIMEOUT=10
REQUEST_MAX_RETRIES=3
REQUEST_BASE_DELAY_MIN=1
REQUEST_BASE_DELAY_MAX=3

# 搜索设置 (可选)
SEARCH_LANGUAGES=zh,en
SEARCH_INCLUDE_SINGLE_LETTERS=true
SEARCH_INCLUDE_DOUBLE_LETTERS=true

# 通知设置 (可选)
NOTIFICATION_MAX_KEYWORDS_DISPLAY=20
NOTIFICATION_INCLUDE_STATISTICS=true